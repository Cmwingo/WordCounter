<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="Content/css/styles.css">
    <title>Word Counter</title>
  </head>
  <div class="container">
    <div class="jumbotron">
      <h1 class="centered">Word Counter</h1>
    </div>
    <body>
      <form class="" action="/count" method="post">
        <div class="form-group">
          <label for="search-word">Enter a word to search for:</label>
          <input type="text" name="searchWord" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="search-string">Enter a sentence to search for that word in:</label>
          <input type="text" name="searchString" class="form-control" required>
        </div>
        <div class="centered">
          <button type="submit" class="btn btn-lg">Count</button>
        </div>
      </form>
    </body>
  </div>
</html>
